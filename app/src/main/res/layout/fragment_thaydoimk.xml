<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.ThayDoiMKFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="Thay đổi mật khẩu"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edt_MKCu"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/edt_text_background"
            android:ems="10"
            android:hint="Mật khẩu cũ"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.491"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <EditText
            android:id="@+id/edt_MKMoi"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edt_text_background"
            android:ems="10"
            android:hint="Mật khẩu mới"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintEnd_toEndOf="@+id/edt_MKCu"
            app:layout_constraintStart_toStartOf="@+id/edt_MKCu"
            app:layout_constraintTop_toBottomOf="@+id/edt_MKCu" />

        <EditText
            android:id="@+id/edt_XNMK"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edt_text_background"
            android:ems="10"
            android:hint="Xác nhận mật khẩu"
            android:inputType="textPassword"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            app:layout_constraintEnd_toEndOf="@+id/edt_MKMoi"
            app:layout_constraintHorizontal_bias="0.966"
            app:layout_constraintStart_toStartOf="@+id/edt_MKMoi"
            app:layout_constraintTop_toBottomOf="@+id/edt_MKMoi" />

        <Button
            android:id="@+id/btn_ThayDoi"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:backgroundTint="#956A4B"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="Thay đổi mật khẩu"
            android:textSize="18sp"
            app:cornerRadius="50dp"
            app:layout_constraintEnd_toEndOf="@+id/edt_XNMK"
            app:layout_constraintStart_toStartOf="@+id/edt_XNMK"
            app:layout_constraintTop_toBottomOf="@+id/edt_XNMK" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>